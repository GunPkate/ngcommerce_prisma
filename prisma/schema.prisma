generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model customer {
  id       String  @id @default(cuid())
  name     String?
  email    String?
  password String?
  cart     cart[]
}

model product {
  id               String   @id @default(cuid())
  name             String?
  cat_id           String 
  variants         product_variant[]
  details          product_detail[]
  img_url          product_img[]
  category         category@relation(fields: [cat_id], references: [id])
}

model product_variant {
  id          String   @id @default(cuid())
  color       String?
  color_code   String?
  size        String?
  product_code   String  
  remains     Float?
  product     product @relation(fields: [product_code], references: [id])
  cartItem    cartItem[]
}

model product_detail {
  id                String   @id @default(cuid())
  price             Float?
  promotion_price   Float?
  description       String?
  rating            String? 
  product_code      String
  product           product @relation(fields: [product_code], references: [id])
}

model product_img {
  id                String   @id @default(cuid())
  product_code      String
  productDetailId   String?  @map("product_detail_code")
  img_url           String?
  product           product @relation(fields: [product_code], references: [id])
}

model category {
  id           String   @id @default(cuid())
  category_name String?
  category_sub String?
  product      product[]
}

model cartItem {
  id        String   @id @default(cuid())
  product_code String   
  skucode   String   
  qty       Float?
  product_variant product_variant @relation(fields: [skucode], references: [id])
  cart cart[]
}

model cart {
  id            String     @id @default(cuid())
  customerId    String   
  itemCodeid    String?
  date          DateTime?
  itemCode      cartItem?  @relation(fields: [itemCodeid], references: [id])
  customer      customer @relation(fields: [customerId], references: [id])
}